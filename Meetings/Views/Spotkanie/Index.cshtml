@model IEnumerable<Meetings.Models.Spotkanie>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (Login.Pracownik.Admin)
{
    <h1>Index</h1>

    <p>
        <a asp-action="Create">Create New</a>
    </p>
    <table class="table">
        <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.MaxLiczbaUczestnikow)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GodzinaSpotkania)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DzienTygodnia)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdFiliiNavigation)
            </th>
            <th>
                @Html.DisplayName("Id sali")
            </th>
            <th>
                @Html.DisplayName("Pojemnosc sali")
            </th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.MaxLiczbaUczestnikow)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.GodzinaSpotkania)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DzienTygodnia)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IdFiliiNavigation.NazwaFilii)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IdSaliNavigation.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IdSaliNavigation.Pojemnosc)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
        </tbody>
    </table>
}


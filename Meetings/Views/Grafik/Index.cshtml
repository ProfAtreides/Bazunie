@model IEnumerable<Meetings.Models.Grafik>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (Login.Pracownik.Admin)
{
    <h1>Index</h1>
    
    <p>
        <a asp-action="Create">Create New</a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.GodzinaRozpoczecia)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.GodzinaZakonczenia)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.IloscGodzin)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DzienTygodnia)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.IdPracownikaNavigation.ImiePracownika)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
    @foreach (var item in Model) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.GodzinaRozpoczecia)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.GodzinaZakonczenia)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IloscGodzin)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DzienTygodnia)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IdPracownikaNavigation.ImiePracownika)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
    }
        </tbody>
    </table>
}

